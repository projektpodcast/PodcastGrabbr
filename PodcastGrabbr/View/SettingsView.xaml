                    </DockPanel>-->
                </WrapPanel>
            </Grid>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*" MinHeight="10"/>
                <RowDefinition Height="auto" MinHeight="60"/>
