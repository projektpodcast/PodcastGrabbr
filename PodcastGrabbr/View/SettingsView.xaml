            <Rectangle Grid.Row="0" Grid.RowSpan="4" Fill="#FF5A5193" />
            <Rectangle Grid.Row="2" Fill="#463574"/>
            <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Text="Podcast Optionen" Style="{StaticResource HeadlineTb}"/>

            <Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
