                                    <TextBlock Text="{Binding Title}" ></TextBlock>-->
                                    <!--</DockPanel>-->
                                </Grid>

                            </Expander.Header>

                            <WrapPanel Orientation="Vertical">
                                <TextBlock TextWrapping="Wrap" Text="{Binding Summary}"></TextBlock>
                                <TextBlock Text="{Binding Keywords}"></TextBlock>
                            </WrapPanel>
                        </Expander>






                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

