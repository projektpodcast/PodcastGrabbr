                                <Grid Width="{Binding ElementName=myexpander, Path=ActualWidth}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="0.5*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>


                                    <Button Grid.Column="2" Content="Download" Width="80"/>
                                    <TextBlock Grid.Column="1" Text="{Binding PublishDate}"></TextBlock>
                                    <TextBlock Grid.Column="0" Text="{Binding Title}"></TextBlock>

